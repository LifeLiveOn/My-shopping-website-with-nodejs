
<div class="container">
  <div class="row">
    {{#each Products }}
      <div class="col-4"  style= "padding:5%">
        <div class="card" style="width: 18rem;">
          <a href="/products/{{this.slug}}"> 
            <img src="/{{this.image}}" class="card-img-top" alt="...">
          </a>
              <div class="card-body">
                <h5 class="card-title">{{this.product_name}}</h5>
                <p class="card-text">{{this.description}}</p>
                <a href="/products/{{this.slug}}" class="btn btn-primary">View detail</a>
              </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>