<div class="container" style="margin-top:10%">
    <h1><a href='/adminmanage' style="color:black";> go back</a></h1> 
    <form method="post" action="/staff/add">
        <div class="mb-3">
            <label for="staffName" class="form-label">Employee/staff Name</label>
            <input type="text" class="form-control" style="text-transform: lowercase" name="emp_name" placeholder="Enter name" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" name="email" required>
        </div>
        <div class="mb-3">
            <select class="form-select" name="store" required>
                <option selected disabled value="">Choose store</option>
                <option value="storeA">storeA</option>
                <option value="storeB">storeB</option>
                <option value="storeC">storeC</option>
            </select>
        </div>
        <button type="submit" class="btn1 btn-outline-dark" id="submitbutton">Add staff</button>
    </form>
</div>
